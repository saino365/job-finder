{
  "name": "job-finder-backend",
  "version": "1.0.0",
  "description": "Job Finder Backend API built with FeathersJS",
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --coverage",
    "lint": "eslint src/ test/",
    "lint:fix": "eslint src/ test/ --fix",
    "format": "prettier --write src/ test/",
    "clean": "rm -rf node_modules yarn.lock",
    "fresh": "yarn clean && yarn install",
    "migrate:statuses": "node scripts/migrate-statuses.js",
    "generate:service": "node ../scripts/dev-helpers.js service",
    "test:integration": "jest --testPathPattern=integration",
    "test:unit": "jest --testPathPattern=unit",
    "docs:generate": "node scripts/generate-docs.js"
  },
  "keywords": [
    "feathers",
    "job-finder",
    "api",
    "nodejs",
    "mongodb",
    "redis"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.893.0",
    "@aws-sdk/s3-request-presigner": "^3.893.0",
    "@feathersjs/authentication": "^5.0.35",
    "@feathersjs/authentication-local": "^5.0.35",
    "@feathersjs/configuration": "^5.0.35",
    "@feathersjs/errors": "^5.0.35",
    "@feathersjs/express": "^5.0.35",
    "@feathersjs/feathers": "^5.0.35",
    "@feathersjs/socketio": "^5.0.35",
    "@types/nodemailer": "^7.0.1",
    "aws-sdk": "^2.1692.0",
    "bcryptjs": "^3.0.2",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "feathers-hooks-common": "^8.2.1",
    "feathers-mongoose": "^8.5.1",
    "helmet": "^8.1.0",
    "ioredis": "^5.7.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.18.1",
    "multer": "^2.0.2",
    "multer-s3": "^3.0.1",
    "node-fetch": "^3.3.2",
    "nodemailer": "^7.0.6",
    "pdfkit": "^0.17.2",
    "rate-limiter-flexible": "^7.3.1",
    "redis": "^5.8.2",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "eslint": "^9.36.0",
    "jest": "^30.1.3",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4"
  }
}
